<!DOCTYPE html>
<html>
<head>
    <title>Fortunes</title>
</head>
<body>
<div>
    <h1>Foo</h1>
    <h2>{{ head }}</h2>
    <button onclick="Msg::Add">Add</button>
    <button onclick="Msg::Clear">Clear</button>
</div>
<table>
    <tbody>
    <tr>
        <th>id</th>
        <th>message</th>
    </tr>
    {{# each fortunes }}
        <tr>
            <td class="col-id">{{id}}</td>
            <td class="col-msg">{{super::head}} {{message}}</td>
            <td class="another"><a class="button" onclick="{{? Msg::Delete(id) }}">Delete</a></td>
        </tr>
    {{/each }}
    </tbody>
</table>
</body>
</html>

